<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Lucee CFML Engine</display-name>
    
    <!-- Lucee Server Configuration -->
    <context-param>
        <param-name>lucee-server-directory</param-name>
        <param-value>{lucee-server}</param-value>
    </context-param>
    
    <context-param>
        <param-name>lucee-web-directory</param-name>
        <param-value>{lucee-web}</param-value>
    </context-param>

    <!-- CFMLServlet - Main Lucee Servlet -->
    <servlet>
        <servlet-name>CFMLServlet</servlet-name>
        <description>This is the main Lucee servlet used to execute CFML code</description>
        <servlet-class>lucee.loader.servlet.CFMLServlet</servlet-class>
        <init-param>
            <param-name>lucee-server-directory</param-name>
            <param-value>{lucee-server}</param-value>
        </init-param>
        <init-param>
            <param-name>lucee-web-directory</param-name>
            <param-value>{lucee-web}</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- RestServlet - Handles REST services -->
    <servlet>
        <servlet-name>RestServlet</servlet-name>
        <description>Lucee REST servlet to handle REST web services</description>
        <servlet-class>lucee.loader.servlet.RestServlet</servlet-class>
        <init-param>
            <param-name>lucee-server-directory</param-name>
            <param-value>{lucee-server}</param-value>
        </init-param>
        <init-param>
            <param-name>lucee-web-directory</param-name>
            <param-value>{lucee-web}</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <!-- AMFServlet - Handles AMF requests (Flash Remoting) -->
    <servlet>
        <servlet-name>AMFServlet</servlet-name>
        <description>Lucee AMF servlet to handle Flash Remoting requests</description>
        <servlet-class>lucee.loader.servlet.AMFServlet</servlet-class>
        <init-param>
            <param-name>lucee-server-directory</param-name>
            <param-value>{lucee-server}</param-value>
        </init-param>
        <init-param>
            <param-name>lucee-web-directory</param-name>
            <param-value>{lucee-web}</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <!-- FileServlet - Handles file serving for Lucee -->
    <servlet>
        <servlet-name>LuceeFileServlet</servlet-name>
        <description>Lucee File servlet to handle file requests</description>
        <servlet-class>lucee.loader.servlet.FileServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <!-- Servlet Mappings -->
    
    <!-- Map CFML file extensions to CFMLServlet -->
    <servlet-mapping>
        <servlet-name>CFMLServlet</servlet-name>
        <url-pattern>*.cfm</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CFMLServlet</servlet-name>
        <url-pattern>*.cfml</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CFMLServlet</servlet-name>
        <url-pattern>*.cfc</url-pattern>
    </servlet-mapping>

    <!-- Map REST services -->
    <servlet-mapping>
        <servlet-name>RestServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <!-- Map AMF services -->
    <servlet-mapping>
        <servlet-name>AMFServlet</servlet-name>
        <url-pattern>/flash/*</url-pattern>
    </servlet-mapping>

    <!-- Map Lucee file servlet -->
    <servlet-mapping>
        <servlet-name>LuceeFileServlet</servlet-name>
        <url-pattern>/lucee/admin/web/context/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LuceeFileServlet</servlet-name>
        <url-pattern>/lucee/admin/server/context/*</url-pattern>
    </servlet-mapping>

    <!-- Welcome files -->
    <welcome-file-list>
        <welcome-file>index.cfm</welcome-file>
        <welcome-file>index.cfml</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

    <!-- Session configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/exception/404.cfm</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/exception/500.cfm</location>
    </error-page>

    <!-- Security constraints (optional) -->
    <!--
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Lucee Admin</web-resource-name>
            <url-pattern>/lucee/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    -->

</web-app>